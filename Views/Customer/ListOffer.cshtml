        const group = $(this).data('group');
        const filter = $(this).data('filter');

        // "T√ºm Teklifler" butonunu pasif yap
        $('#allButton').removeClass('active');

        // Eƒüer "T√ºm Sebepler" butonu se√ßildiyse
        if (filter === 'AllReason') {
            filterTableWithAllReasons();
            $(this).addClass('active'); // "T√ºm Sebepler" aktif yap
        } else {
            // Aynƒ± gruptaki Proje ƒ∞ptal aktif butonu kapat
