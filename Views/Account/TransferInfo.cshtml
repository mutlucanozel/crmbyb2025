<script>
    $(document).ready(function () {
        $(document).ready(function () {
            // SourceCustomer iÃ§in Select2 baÅŸlatma
            $('#sourceCustomer').select2({
                placeholder: "SeÃ§iniz",
                allowClear: true,
                width: '100%' // Select2'nin geniÅŸliÄŸini ayarlar
            }).on('select2:open', function () {
                // AÃ§Ä±ldÄ±ÄŸÄ±nda arama alanÄ±na odaklan
                document.querySelector('.select2-container--open .select2-search__field').focus();
            });

            // TargetCustomer iÃ§in Select2 baÅŸlatma
            $('#targetCustomer').select2({
                placeholder: "SeÃ§iniz",
                allowClear: true,
                width: '100%' // Select2'nin geniÅŸliÄŸini ayarlar
            }).on('select2:open', function () {
                // AÃ§Ä±ldÄ±ÄŸÄ±nda arama alanÄ±na odaklan
                document.querySelector('.select2-container--open .select2-search__field').focus();
            });
            // Kaynak ve hedef mÃ¼ÅŸterileri deÄŸiÅŸtir
            $('#swapCustomers').click(function () {
                var sourceCustomer = $('#sourceCustomer').val(); // SourceCustomer seÃ§imi
                var targetCustomer = $('#targetCustomer').val(); // TargetCustomer seÃ§imi

                // SeÃ§imleri deÄŸiÅŸtir ve Select2'yi gÃ¼ncelle
                $('#sourceCustomer').val(targetCustomer).trigger('change');
                $('#targetCustomer').val(sourceCustomer).trigger('change');
            });

            // Form gÃ¶nderimi
            $('#transferInfoForm').submit(function (event) {
    event.preventDefault();

    var sourceCustomerId = $('#sourceCustomer').val();
    var targetCustomerId = $('#targetCustomer').val();
    var selectedInfoTypes = [];
    var deleteSource = $('#deleteSourceCustomer').is(':checked'); // Checkbox kontrolÃ¼

    $('input[name="infoTypes"]:checked').each(function () {
        selectedInfoTypes.push($(this).val());
    });

    var token = $('input[name="__RequestVerificationToken"]').val();
    var data = {
        SourceCustomerId: sourceCustomerId,
        TargetCustomerId: targetCustomerId,
        InfoTypes: selectedInfoTypes,
        DeleteSourceCustomer: deleteSource // Checkbox verisini gÃ¶nder
    };

    $.ajax({
        type: "POST",
        url: '@Url.Action("TransferInfo", "Account")',
        data: JSON.stringify(data),
        contentType: "application/json; charset=utf-8",
        headers: {
            "RequestVerificationToken": token
        },
        success: function (response) {
            if (response.success) {
                Toastify({
                    text: response.message,
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "#4caf50",
                }).showToast();

             
            } else {
                Toastify({
                    text: response.message,
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "#f44336",
                }).showToast();
            }
        },
        error: function () {
            Toastify({
                text: "Kaynak mÃ¼ÅŸterinin teklifi veya kayÄ±tÄ± mevcut onlarÄ± aktarmadan silme iÅŸlemi yapÄ±lamaz !",
                duration: 3000,
                gravity: "top",
                position: "right",
                backgroundColor: "#f44336",
            }).showToast();
        }
    });
});

        });
    });

</script>



