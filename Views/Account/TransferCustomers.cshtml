@model crm.Models.TransferViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>M√º≈üteri Aktarƒ±mƒ±</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <style>
        body {
            background-color: #2D3A59;
        }
        
        .form-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(12, 127, 229, 0.1);
        }
        h3{
            font-size: 22px;
        }

        .form-title {
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
            font-size: 1.5rem;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 class="display-4 text-center">M√º≈üteri Sorumlusu Deƒüi≈ütirme </h2>
        <hr>
        
    <div class="form-container">
        <form id="transferCustomerForm" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <h3>Kaynak M√º≈üteri Sorumlusu</h3>
                <select class="form-control" id="sourceUser" name="sourceUserId" required>
                    <option value="">Se√ßiniz</option>
                    @foreach (var user in Model.Users)
                    {
                        var customerCount = ViewBag.UserCounts[user.Id];
                        <option value="@user.Id">@user.FirstName @user.LastName (@customerCount)</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <h3 for="targetUser">Hedef M√º≈üteri Sorumlusu</h3>
                <select class="form-control" id="targetUser" name="targetUserId" required>
                    <option value="">Se√ßiniz</option>
                    @foreach (var user in Model.Users)
                    {
                        var customerCount = ViewBag.UserCounts[user.Id];
                        <option value="@user.Id">@user.FirstName @user.LastName (@customerCount)</option>
                    }
                </select>
            </div>
            <div class="alert alert-warning">
            <label>üö® Bu i≈ülem se√ßilecek Kaynak M√º≈üteri sorumlusunun T√úM m√º≈üterilerinin M√º≈üteri Sorumlusu deƒüerini Hedef M√º≈üteri Sorumlusu olarak deƒüi≈ütirir.</label></div>
            <button type="submit" class="btn btn-outline-dark btn-lg btn-block">Aktar <i class="fas fa-exchange-alt"></i></button>
        </form>
        <div id="message" class="mt-3"></div>
    </div>

    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Include Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#transferCustomerForm').submit(function (event) {
                event.preventDefault(); // Sayfanƒ±n yeniden y√ºklenmesini engelle

                var form = $(this);
                var url = '@Url.Action("TransferCustomers", "Account")';
                var token = $('input[name="__RequestVerificationToken"]').val();
                var sourceUserId = $('#sourceUser').val();
                var targetUserId = $('#targetUser').val();

                $.ajax({
                    type: "POST",
                    url: url,
                    data: {
                        __RequestVerificationToken: token,
                        sourceUserId: sourceUserId,
                        targetUserId: targetUserId
                    },
                    success: function (response) {
                        if (response.success) {
                            $('#message').html('<div class="alert alert-success">' + response.message + '</div>');
                        } else {
                            $('#message').html('<div class="alert alert-danger">' + response.message + '</div>');
                        }
                    },
                    error: function () {
                        $('#message').html('<div class="alert alert-danger">Bir hata olu≈ütu, l√ºtfen tekrar deneyin.</div>');
                    }
                });
            });
        });
    </script>
</body>
</html>
