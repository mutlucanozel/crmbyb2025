@model List<crm.Models.PageAccessViewModel>

    @{
    ViewData["Title"] = "Manage Roles";
    }

    <head>
        <style>
            body {
                background-color: #2C3D4F;
            }
        </style>
    </head>

    <body>
        <div class="container mt-4">
            <h2 class="display-4 text-center">Rol Yetkilendirme </h2>
            <hr>
            <form id="manageRolesForm" asp-action="ManageRoles" method="post">
                <div class="table-responsive">
                    <table class="user-table table table-bordered">
                        <thead>
                            <tr>
                                <th>Yetki</th>
                                @foreach (var role in ViewBag.Roles)
                                {
                                <th>@role.Name</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pageAccess in Model)
                            {
                            <tr>
                                <td>@pageAccess.DisplayName</td> <!-- Changed to DisplayName -->
                                @foreach (var role in ViewBag.Roles)
                                {
                                <td class="clickable-cell" data-page="@pageAccess.PageName" data-role="@role.Name">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="roleAccess"
                                            value="@pageAccess.PageName-@role.Name"
                                            @(pageAccess.Roles.Contains(role.Name) ? "checked" : "" )
                                            style="display: none;" />
                                        <i class="fa @(pageAccess.Roles.Contains(role.Name) ? " fa-check-square"
                                            : "fa-square-o" )" aria-hidden="true"></i>
                                    </div>
                                </td>
                                }
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <button type="button" id="submitBtn" class="btn btn-outline-dark mb-3 btn-lg">Deƒüi≈üiklikleri Kaydet <i
                        class="fa fa-calendar-check" aria-hidden="true"></i></button>
            </form>
        </div>

        <!-- Include Bootstrap CSS for styling -->
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
            rel="stylesheet">

        <!-- Include jQuery and Bootstrap JS for interactions -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
        <!-- Include SweetAlert CSS and JS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

        <script>
            $(document).ready(function () {
                $('.clickable-cell').on('click', function () {
                    var $checkbox = $(this).find('input[type="checkbox"]');
                    var $icon = $(this).find('i');

                    $checkbox.prop('checked', !$checkbox.prop('checked'));

                    if ($checkbox.prop('checked')) {
                        $icon.removeClass('fa-square-o').addClass('fa-check-square');
                    } else {
                        $icon.removeClass('fa-check-square').addClass('fa-square-o');
                    }
                });

                $('#submitBtn').on('click', function () {
                    Swal.fire({
                        title: 'Emin misiniz?',
                        text: "Yaptƒ±ƒüƒ±nƒ±z deƒüi≈üiklikler kayƒ±t edilecektir.",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        cancelButtonText: 'Hayƒ±r ! ',
                        confirmButtonText: 'Evet, kayƒ±t et !'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: '@Url.Action("ManageRoles")',
                                type: 'POST',
                                data: $('#manageRolesForm').serialize(),
                                success: function (response) {
                                    if (response.success) {
                                        Toastify({
                                            text: response.message || "Deƒüi≈üiklikler ba≈üarƒ±lƒ± bir ≈üekilde kaydedildi ü•≥",
                                            duration: 3000,
                                            gravity: "top",
                                            position: "right",
                                            backgroundColor: "#28a745",
                                        }).showToast();
                                    } else {
                                        Toastify({
                                            text: response.message,
                                            duration: 3000,
                                            gravity: "top",
                                            position: "right",
                                            backgroundColor: "#dc3545",
                                            close: true
                                        }).showToast();
                                    }
                                }
                                ,
                                error: function () {
                                    Toastify({
                                        text: "Beklenmeyen bir hata olu≈ütu. ‚õîÔ∏è",
                                        duration: 3000,
                                        gravity: "top",
                                        position: "right",
                                        backgroundColor: "#dc3545",
                                        close: true
                                    }).showToast();
                                }
                            });

                        }
                    });
                });
            });
        </script>
    </body>