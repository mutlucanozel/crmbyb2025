        public string FormatPhoneNumber(string phoneNumber)
        {
            if (string.IsNullOrEmpty(phoneNumber))
            {
                return ""; // Eƒüer numara bo≈üsa bo≈ü d√∂n
            }
    
            phoneNumber = phoneNumber.Replace(" ", "").Replace("-", ""); // Bo≈üluklarƒ± ve √ßizgileri temizle
    
            // Numaranƒ±n sadece sayƒ±lardan olu≈ütuƒüuna emin olun
            phoneNumber = new string(phoneNumber.Where(char.IsDigit).ToArray());
    
            if (phoneNumber.Length == 11) // T√ºrk telefon numarasƒ± uzunluƒüunda mƒ± kontrol et
            {
                return $"0{phoneNumber.Substring(1, 3)} {phoneNumber.Substring(4, 3)} {phoneNumber.Substring(7, 2)} {phoneNumber.Substring(9, 2)}";
            }
            return phoneNumber; // Eƒüer numara 11 haneli deƒüilse olduƒüu gibi d√∂nd√ºr
        }
    }
    
